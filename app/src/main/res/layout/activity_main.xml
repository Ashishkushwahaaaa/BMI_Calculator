<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Welcome to the BMI calculator"
        android:textStyle="bold"
        android:textSize="25sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <EditText
            android:id="@+id/edtweight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter your Weight (in Kg)"
            android:textSize="20sp"
            android:inputType="number"
            android:foregroundTint="@color/black" />
        <EditText
            android:id="@+id/edtHeightft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter your Height (in ft)"
            android:textStyle="italic"
            android:inputType="number"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/edtHeightin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter your Height (in inch)"
            android:textStyle="italic"
            android:inputType="number"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/txtresult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textSize="20sp"
            android:layout_marginVertical="40dp"
            android:textStyle="bold|italic"/>
        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate BMI"
            android:backgroundTint="#FA6E6E"
            android:textStyle="bold"
            android:backgroundTintMode="src_atop"/>


    </LinearLayout>

</RelativeLayout>